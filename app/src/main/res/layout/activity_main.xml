<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.optic.colorpickerslider.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Red"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="0.1"/>

            <SeekBar
                android:id="@+id/seekbarRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:max="255"
                android:progress="128"
                android:layout_weight="0.85"/>

            <TextView
                android:id="@+id/textViewRedValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="125"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:layout_weight="0.1"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Green"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="0.05"/>

            <SeekBar
                android:id="@+id/seekbarGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="-4dp"
                android:max="255"
                android:progress="140"
                android:layout_weight="0.85"/>

            <TextView
                android:id="@+id/textViewGreenValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="125"
                android:textAlignment="center"
                android:layout_weight="0.1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Azul"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="0.05"/>

            <SeekBar
                android:id="@+id/seekbarBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:max="255"
                android:progress="80"
                android:layout_weight="0.85"/>

            <TextView
                android:id="@+id/textViewBlueValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="125"
                android:textAlignment="center"
                android:layout_weight="0.1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alpha"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="0.05"/>

            <SeekBar
                android:id="@+id/seekbarAlpha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:max="255"
                android:progress="190"
                android:layout_weight="0.85"/>

            <TextView
                android:id="@+id/textViewAlphaValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="125"
                android:textAlignment="center"
                android:layout_weight="0.1"/>

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp">


            <View
                android:id="@+id/viewColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80808080"/>
        </FrameLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
